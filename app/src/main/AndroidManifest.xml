<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="progmobile.ludolearn">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@drawable/dessin_ecole"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".AccueilActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".choixConnectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ConnexionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".inscriptionActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="DATABASE"
            android:value="database.db" />
        <meta-data
            android:name="VERSION"
            android:value="10" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="progmobile.ludolearn.bd" />

        <activity
            android:name=".choixExerciceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MathsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CultureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChoixTableMultiplication"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResultatCultureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PenduActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CalculsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResultatMathsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IntrusActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResultatIntrusActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>