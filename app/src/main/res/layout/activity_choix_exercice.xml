<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="progmobile.ludolearn.choixExerciceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BDEC00"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewPhoto"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/anonyme" />

            <TextView
                android:id="@+id/textViewPersonne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Salut "
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewConsigne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Choisissez votre exercice"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageMaths"
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:onClick="maths"
                        app:srcCompat="@drawable/mathematiques" />

                    <ImageView
                        android:id="@+id/imageCulture"
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:onClick="culture"
                        app:srcCompat="@drawable/culture_generale" />

                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imagePendu"
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:onClick="pendu"
                        app:srcCompat="@drawable/pendu10" />

                    <ImageView
                        android:id="@+id/imageAutre2"
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:onClick="intrus"
                        app:srcCompat="@drawable/intrus" />
                </GridLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
