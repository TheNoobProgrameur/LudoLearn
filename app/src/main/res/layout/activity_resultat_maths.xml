<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="progmobile.ludolearn.ResultatMathsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewResultatFois"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="RESULTAT"
            android:textSize="50dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/nomTypeCalcul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Catégorie : "
            android:textSize="20dp" />
        <TextView
            android:id="@+id/nbErreurs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text=""
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/reessayerCalcul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:onClick="reessayerCalcul"
            android:layout_marginBottom="50dp"
            android:background="#BDEC00"
            android:text="RéESSAYER" />

        <Button
            android:id="@+id/retourExercice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:onClick="retour"
            android:layout_marginBottom="50dp"
            android:background="#BDEC00"
            android:text="CHOISIR UN AUTRE EXERCICE" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
